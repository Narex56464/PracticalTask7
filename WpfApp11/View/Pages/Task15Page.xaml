<Page x:Class="WpfApp11.View.Pages.Task15Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task15Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 15"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 50 0 0">
            <TextBlock Text="Ввести с клавиатуры координаты точек A(x0,y0) и B(x1,y1). Определить какая мз точек Ф или В наименее"
                       FontSize="16"/>

            <TextBlock Text="удалена от начала координат (О(0,0). Ответ вывести в виде сообщения"
                       FontSize="16"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 200"
                    Orientation="Horizontal">
            <TextBlock Text="A(x0): "
                       FontSize="20"/>
            <TextBox x:Name="Tbx0"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" A(y0): "
                       FontSize="20"/>
            <TextBox x:Name="Tby0"
                     Width="70"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 100"
                    Orientation="Horizontal">
            <TextBlock Text=" B(x1): "
                       FontSize="20"/>
            <TextBox x:Name="Tbx1"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" B(y1): "
                       FontSize="20"/>
            <TextBox x:Name="Tby1"
                     Width="70"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 50 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Width="110"
                    Background="Transparent"
                    BorderBrush="Black"
                    Foreground="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 160 0 0">
            <TextBlock Text="Результат"
                       FontSize="20"
                       FontWeight="Bold"
                       x:Name="TbA"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 16"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
