<Page x:Class="WpfApp11.View.Pages.Task8Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task8Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 8"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 50 0 0">
            <TextBlock Text="Ввести с клавиатуры значения сторон двух треугольников a1,b1,c1 и a2,b2,c2. Определить площадь какого"
                       FontSize="16"/>

            <TextBlock Text="треугольника - наибольшая. Ответ вывести в виде сообщения"
                       FontSize="16"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 200"
                    Orientation="Horizontal">
            <TextBlock Text="A(a1): "
                       FontSize="20"/>
            <TextBox x:Name="Tba1"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" A(b1): "
                       FontSize="20"/>
            <TextBox x:Name="Tbb1"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" A(c1): "
                       FontSize="20"/>
            <TextBox x:Name="Tbc1"
                     Width="70"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 100"
                    Orientation="Horizontal">
            <TextBlock Text=" B(a2): "
                       FontSize="20"/>
            <TextBox x:Name="Tba2"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" B(b2): "
                       FontSize="20"/>
            <TextBox x:Name="Tbb2"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" B(c2): "
                       FontSize="20"/>
            <TextBox x:Name="Tbc2"
                     Width="70"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 50 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Width="110"
                    Background="Transparent"
                    BorderBrush="Black"
                    Foreground="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 160 0 0">
            <TextBlock Text="Результат"
                       FontSize="20"
                       FontWeight="Bold"
                       x:Name="TbA"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 9"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
