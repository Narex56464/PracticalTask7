<Page x:Class="WpfApp11.View.Pages.Task23Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Task23Page">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 5 0 0">
            <TextBlock Text="Задание 23"
                       FontSize="25"
                       FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0 50 0 0">
            <TextBlock Text="Известны две скорости, одна в километрах в час, другая в метрах в секунду. Какая из них больше?"
                       FontSize="16"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 0 0 100"
                    Orientation="Horizontal">
            <TextBlock Text="km/h: "
                       FontSize="20"/>
            <TextBox x:Name="Tbkm"
                     Width="70"
                     FontSize="20"/>

            <TextBlock Text=" m/c: "
                       FontSize="20"/>
            <TextBox x:Name="Tbm"
                     Width="70"
                     FontSize="20"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 50 0 0">
            <Button Content="Ответ"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnAns"
                    Click="BtnAns_Click"
                    Width="110"
                    Background="Transparent"
                    BorderBrush="Black"
                    Foreground="Black"
                    BorderThickness="2"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0 160 0 0">
            <TextBlock Text="Результат"
                       FontSize="20"
                       FontWeight="Bold"
                       x:Name="TbA"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0 0 10 10">
            <Button Content="Задание 24"
                    Padding="5"
                    FontSize="20"
                    FontWeight="Bold"
                    Cursor="Hand"
                    x:Name="BtnNextTask"
                    Click="BtnNextTask_Click"
                    Background="Transparent"
                    BorderBrush="black"
                    BorderThickness="2"/>
        </StackPanel>
    </Grid>
</Page>
